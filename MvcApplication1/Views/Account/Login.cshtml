<div class="page">
    @model MvcApplication1.Models.LoginModel

    @{
        ViewBag.Title = "Выполнить вход";
    }

    <hgroup class="title">
        <h1>@ViewBag.Title.</h1>
    </hgroup>

    <div class="mainform">
        <section id="loginForm">
            <h2>Используйте для входа локальную учетную запись.</h2>
            @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                
                    <h2>Форма входа</h2>
                    <br/>

                    
                            <div class="field">
                                @Html.LabelFor(m => m.UserName)
                                @Html.TextBoxFor(m => m.UserName)
                                <div style="color:red; font-weight:bold"> @Html.ValidationMessageFor(m => m.UserName)</div>
                                </div>
                           
                        
                            <div class="field">
                                @Html.LabelFor(m => m.Password)
                                @Html.PasswordFor(m => m.Password)
                                <div style="color:red; font-weight:bold"> @Html.ValidationMessageFor(m => m.Password)</div>
                            </div>

                    <div class="field">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                    </div> 
                    


                    
                    <br/>
                    <input type="submit" value="Выполнить вход" />
                
                <p>
                    @Html.ActionLink("Зарегистрируйтесь", "Register"), если у вас нет учетной записи.
                </p>
            }
        </section>
    </div>
<!--    <section class="social" id="socialLoginForm">
        <h2>Используйте для входа другую службу.</h2>
        Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
    </section> -->

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>